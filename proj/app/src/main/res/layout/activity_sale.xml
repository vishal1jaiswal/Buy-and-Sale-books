<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sale">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Sale"
        android:background="@color/colorPrimaryDark"
        android:textSize="40dp"
       android:gravity="center"
        android:textColor="@color/colorAccent"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Fill up the details"
        android:textSize="30dp"
        android:gravity="center"
        android:textColor="@color/Black"
        android:layout_marginTop="3dp"/>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/id_bookname"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:hint="Name of the book"
            android:layout_marginTop="10dp"
            android:background="#FFFFFF"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/id_publication"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="7dp"
            android:hint="Publication"
            android:background="#FFFFFF"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"/>

    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/id_year"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="7dp"
            android:inputType="number"
            android:hint="year"
            android:background="#FFFFFF"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"/>

    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/id_address"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="7dp"
            android:hint="Address and no."
            android:background="#FFFFFF"
            android:textStyle="bold"
            android:inputType="textLongMessage"
            android:textColor="@color/colorPrimaryDark"/>

    </android.support.design.widget.TextInputLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="123dp"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:id="@+id/id_image"/>
    <EditText
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:hint="image name"
        android:id="@+id/id_imagename"/>

    <Button
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:text="browse"
        android:textSize="15dp"
        android:textColor="#FF0000"
        android:onClick="btn_browse"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="40dp"
        />

</LinearLayout>



    <Button
        android:id="@+id/btn_upload"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:textColorHighlight="@color/colorAccent"
        android:background="#00FFFF"
        android:textStyle="bold"
        android:text="Upload"
        android:onClick="upload_button"/>
    
</LinearLayout>
</RelativeLayout>